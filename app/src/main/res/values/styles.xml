    <style name="TextBodyEmphasis">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeBody</item>
        <item name="android:fontFamily">?fontSemiBold</item>
        <item name="android:lineSpacingExtra">@dimen/spacingMicro</item>
    </style>

    <style name="TextBodyRegular">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeBody</item>
        <item name="android:fontFamily">?fontRegular</item>
        <item name="android:lineSpacingExtra">@dimen/spacingMicro</item>
