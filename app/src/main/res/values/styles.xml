    <style name="TextInteractiveButton">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeButton</item>
        <item name="android:fontFamily">?fontSemiBold</item>
    </style>

    <style name="TextToolbarTitle">
        <item name="android:textSize">@dimen/fontSizeHeading5</item>
        <item name="android:fontFamily">?fontSemiBold</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ToolbarRegular">
        <item name="titleTextAppearance">@style/TextToolbarTitle</item>
        <item name="titleTextColor">@color/colorNeutral100</item>
        <item name="android:background">?colorToolbar</item>
    </style>

