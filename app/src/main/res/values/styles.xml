<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text styles -->
    <style name="TextBodyHeading1">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeHeading1</item>
        <item name="android:fontFamily">?fontThin</item>
    </style>

    <style name="TextBodyHeading2">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeHeading2</item>
        <item name="android:fontFamily">?fontSemiBold</item>
    </style>

    <style name="TextBodyHeading3">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/fontSizeHeading3</item>
        <item name="android:fontFamily">?fontMedium</item>
